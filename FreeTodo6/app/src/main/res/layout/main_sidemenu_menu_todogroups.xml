<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_sidemenu_menu_items"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="@dimen/sys_spacing_16dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:id="@+id/main_sidemenu_menu_items_go_action"
        android:layout_width="0dp"
        android:layout_weight="18"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/sys_spacing_8dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/main_sidemenu_menu_items_color"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/sys_icon_size"
            android:src="@drawable/ic_circle" />

        <TextView
            android:id="@+id/main_sidemenu_menu_items_todogroup_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/sys_medium_text_size"
            android:singleLine="true"
            android:layout_marginStart="@dimen/sys_spacing_8dp"
            android:ellipsize="end" />

    </LinearLayout>

    <TextView
        android:id="@+id/main_sidemenu_menu_items_todolistitem_count"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:text=""
        android:gravity="center_vertical|center"
        android:textSize="@dimen/sys_small_text_size"/>

    <ImageView
        android:id="@+id/main_sidemenu_menu_items_children_show"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="@dimen/sys_icon_size"
        android:visibility="gone"
        android:gravity="center_vertical|end"
        android:tint="@color/colorDarkGray"
        android:src="@drawable/ic_arrow_down" />

</LinearLayout>