<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/init_color_list_items"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/sys_spacing_8dp"
    android:layout_gravity="center_vertical">

    <ImageView
        android:id="@+id/init_color_list_items_image"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_blank_circle"
        android:gravity="center"/>

    <TextView
        android:id="@+id/init_color_list_items_text"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="color"
        android:textSize="@dimen/sys_medium_text_size"
        android:gravity="center"
        android:ellipsize="end"/>

</LinearLayout>