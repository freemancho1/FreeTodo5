<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_sidemenu_without_scrollview"
    android:fillViewport="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/main_sidemenu_menu_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/main_sidemenu_menu_today"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sys_spacing_16dp"
            android:layout_marginStart="@dimen/sys_spacing_16dp"
            android:layout_marginEnd="@dimen/sys_spacing_16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/sys_icon_size"
                android:layout_height="@dimen/sys_icon_size"
                android:src="@drawable/ic_today" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sidemenu_menu_today"
                android:layout_marginStart="@dimen/sys_spacing_16dp"
                android:textSize="@dimen/sys_medium_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_sidemenu_menu_7_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sys_spacing_16dp"
            android:layout_marginStart="@dimen/sys_spacing_16dp"
            android:layout_marginEnd="@dimen/sys_spacing_16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/sys_icon_size"
                android:layout_height="@dimen/sys_icon_size"
                android:src="@drawable/ic_7_days" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sidemenu_menu_7_days"
                android:layout_marginStart="@dimen/sys_spacing_16dp"
                android:textSize="@dimen/sys_medium_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_sidemenu_menu_all_days"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sys_spacing_16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/sys_icon_size"
                android:layout_height="@dimen/sys_icon_size"
                android:src="@drawable/ic_all_days" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sidemenu_menu_all_days"
                android:layout_marginStart="@dimen/sys_spacing_16dp"
                android:textSize="@dimen/sys_medium_text_size"/>

        </LinearLayout>

        <View
            android:id="@+id/main_sidemenu_divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_sidemenu_menu_list_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sys_spacing_16dp"
            android:layout_marginStart="@dimen/sys_spacing_16dp"
            android:layout_marginEnd="@dimen/sys_spacing_16dp"
            tools:listitem="@layout/main_sidemenu_menu_favorites"/>

        <View
            android:id="@+id/main_sidemenu_divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_sidemenu_menu_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sys_spacing_16dp"
            android:layout_marginStart="@dimen/sys_spacing_16dp"
            android:layout_marginEnd="@dimen/sys_spacing_16dp"
            android:scrollIndicators="start"
            tools:listitem="@layout/main_sidemenu_menu_items"/>

        <View
            android:id="@+id/main_sidemenu_divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:id="@+id/main_sidemenu_menu_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sys_spacing_16dp"
            android:layout_marginStart="@dimen/sys_spacing_16dp"
            android:layout_marginEnd="@dimen/sys_spacing_16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/sys_icon_size"
                android:layout_height="@dimen/sys_icon_size"
                android:src="@drawable/ic_settings_black_24dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sidemenu_menu_settings"
                android:layout_marginStart="@dimen/sys_spacing_16dp"
                android:textSize="@dimen/sys_medium_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/main_sidemenu_menu_init_db"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sys_spacing_16dp"
            android:layout_marginStart="@dimen/sys_spacing_16dp"
            android:layout_marginEnd="@dimen/sys_spacing_16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/sys_icon_size"
                android:layout_height="@dimen/sys_icon_size"
                android:src="@drawable/ic_reload" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sidemenu_menu_init_db"
                android:layout_marginStart="@dimen/sys_spacing_16dp"
                android:textSize="@dimen/sys_medium_text_size"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>